<?xml version="1.0" encoding="utf-8"?>
<!-- cornflowerblue dodgerblue -->
<selector xmlns:android="http://schemas.android.com/apk/res/android"> 
    <item android:state_pressed="true"> 
        <shape> 
            <gradient android:angle="270" android:endColor="@color/red"   android:startColor="@color/red" /> 
            <corners android:radius="5dp" /> 
        </shape> 
    </item> 
    <item> 
        <shape> 
            <solid android:color="@color/cornflowerblue" />
             <gradient android:angle="270" android:endColor="@color/tomato"   android:startColor="@color/tomato" /> 
            <corners android:radius="5dp" /> 
        </shape> 
    </item> 
</selector> 