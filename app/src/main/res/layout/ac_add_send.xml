<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/qqloginwhite"
    android:orientation="vertical" >

 
    <util.view.TopPanelReturnTitleMenu
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
    />
  

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        layout="@layout/listview_adapter_find_user_item"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:text="填写验证信息"
        android:textColor="@color/qqlittleblack" />

    <EditText
        android:id="@+id/etyanzhen"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@color/qqlightwhite"
        android:gravity="top"
        android:padding="15dp"
        android:singleLine="false"
        android:text="我是"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:text="设置备注"
        android:textColor="@color/qqlittleblack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/qqlightwhite"
        android:paddingLeft="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注"
            android:textColor="@color/black" />

        <util.view.ClearEditText
            android:id="@+id/cetnickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/sharp_edit"
            android:drawableRight="@drawable/delblack"
            android:hint=""
            android:paddingBottom="10dp"
            android:paddingLeft="14dp"
            android:paddingRight="12dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:maxLength="100"
            
            android:textSize="15dp" />
    </LinearLayout>

           <Button
            android:id="@+id/bdelete"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="20dp"
            android:background="@drawable/selector_button_delete"
            android:text="拒绝添加"
            android:textColor="@color/black"
            android:visibility="invisible"
            android:textSize="18dp" />

</LinearLayout>