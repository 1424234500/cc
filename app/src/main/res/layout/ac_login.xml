<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rllogin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llloginmove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"

            android:background="@drawable/sharp_edit">

            <util.view.ClearEditText
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/sharp_edit"
                android:drawableRight="@drawable/delblack"
                android:hint="CC号/邮箱"
                android:maxLength="20"
                android:paddingLeft="14dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ivdown"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="9dp"
                android:background="@drawable/sharp_edit"
                android:paddingLeft="5dp"
                android:paddingRight="16dp"
                android:src="@drawable/downspin" />

        </LinearLayout>

        <!-- android:drawableLeft="@android:drawable/ic_notification_clear_all" -->

        <util.view.ClearEditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/sharp_edit"
            android:drawableRight="@drawable/delblack"
            android:hint="密码"
            android:maxLength="20"
            android:paddingLeft="14dp"
            android:paddingTop="10dp"
            android:paddingRight="12dp"
            android:paddingBottom="10dp"
            android:password="true"

            android:singleLine="true"
            android:textSize="16sp" />

        <Button
            android:id="@+id/blogin"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_button_login"
            android:text="登 录"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivprofile"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_above="@+id/llloginmove"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ccd" />

    <TextView
        android:id="@+id/tvcannotlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="0dp"
        android:text="离线模式"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/qqloginbuttonblue"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvnewuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="14dp"
        android:text="新用户注册"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/qqloginbuttonblue"
        android:textSize="14sp" />


</RelativeLayout>