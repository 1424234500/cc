<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/viewsystem"
     >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:layout_alignParentBottom="true"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="40dp"
        >


        <Button
            android:id="@+id/bgoback"
            android:layout_width="80dp"
            android:layout_height="60dp" android:splitMotionEvents="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="后退" />

        <Button
            android:id="@+id/bgohead"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_above="@+id/bgoback"
            android:layout_alignStart="@+id/bgoback"
            android:splitMotionEvents="true"
            android:text="前进" />


        <Button
            android:id="@+id/bturnleft"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="-157dp" android:splitMotionEvents="true"
            android:layout_toEndOf="@+id/bturnright"
            android:text="左转" />

        <Button
            android:id="@+id/bturnright"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true" android:splitMotionEvents="true"
            android:layout_centerVertical="true"
            android:text="右转" />


        <!--@android:id/background:进度条的整体背景颜色。-->
        <!--@android:id/secondaryProgress:二级进度条的颜色-->
        <!--@android:id/progress:一级进度条的颜色,即进度条当前已经滑过面积的颜色。-->

        <SeekBar
            android:id="@+id/sbcarmera"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            android:max="180"
            android:progress="90"
            android:progressDrawable="@color/gainsboro"
            tools:alpha="0.7" />
        <util.view.SeekBarL
            android:id="@+id/sbspeed"

            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:layout_alignTop="@+id/bgohead"
            android:layout_alignBottom="@+id/bgoback"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/bgoback"
            android:alpha="0.6"
            android:max="100"
            android:progress="60"
            android:progressDrawable="@color/gainsboro" />


    </RelativeLayout>

</RelativeLayout>
