<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp" >

    <LinearLayout
        android:id="@+id/viewcancelok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/qqlittleblack"
        android:paddingTop="1sp" >

        <TextView
            android:id="@+id/tvcancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="1sp"
            android:layout_weight="1"
            android:background="@drawable/selector_little_white"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/qqloginbuttonblue"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvok"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_little_white"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/qqloginbuttonblue"
            android:textSize="18dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"  >

        <ImageView
            android:id="@+id/ivpressvoice"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/tvtip"
            android:layout_centerHorizontal="true"
            android:src="@drawable/voice_icon" />
 	
        	<TextView
            android:id="@+id/tvtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="12dp"
            android:text="---0:00---"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/tvtip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="12dp"
            android:text="按住说话"
            android:textSize="18dp" />
	
        <ImageView
            android:id="@+id/ivplay"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/ivpressvoice"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/ivpressvoice"
            android:src="@drawable/voice_play" />

        <ImageView
            android:id="@+id/ivdel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/ivpressvoice"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/ivpressvoice"
            android:src="@drawable/voice_del" />

    </RelativeLayout>

</RelativeLayout>