<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_ll_qwhite_press"
 	android:paddingBottom="5dp"
    android:paddingLeft="15dp"   
    android:paddingRight="15dp"
    android:paddingTop="5dp" >

    <ImageView
        android:id="@+id/ivprofile"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
         android:scaleType="centerCrop"
        android:src="@drawable/profile" />
    <TextView
        android:id="@+id/tvusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivprofile"
        android:layout_toRightOf="@+id/ivprofile" 
        android:text="小昵称"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <LinearLayout
        android:id="@+id/llnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvusername" 
        android:layout_below="@+id/tvusername"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/qqtoppanelblue"
            android:layout_marginRight="2dp"
            android:padding="1dp"
            android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/tvpersonicon"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:paddingRight="1dp"
            android:src="@drawable/picon" />

        <TextView
            android:id="@+id/tvnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="100"          
            android:textColor="@color/qqlightwhite"
            android:layout_marginRight="1dp"
            android:textSize="10dp" />

    </LinearLayout>
        <TextView
            android:id="@+id/tvid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="12310230123013"
            android:textColor="@color/qqlittleblack"
            android:textSize="12dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_below="@+id/llnum"
        android:layout_toRightOf="@+id/ivprofile"
        android:text="谁会写这个签名"
        android:textColor="@color/qqlittleblack"
        android:textSize="11dp" />

</RelativeLayout>